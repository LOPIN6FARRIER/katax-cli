{
  "name": "katax-cli",
  "version": "1.0.0",
  "description": "CLI tool to generate Express APIs with TypeScript and katax-core validation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "katax": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 \"templates/**/*\" dist",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "api",
    "generator",
    "express",
    "typescript",
    "validation",
    "katax-core",
    "cli",
    "rest-api",
    "crud"
  ],
  "author": "Vinicio Esparza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LOPIN6FARRIER/katax-cli.git"
  },
  "bugs": {
    "url": "https://github.com/LOPIN6FARRIER/katax-cli/issues"
  },
  "homepage": "https://github.com/LOPIN6FARRIER/katax-cli#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ejs": "^3.1.10",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.3.0",
    "katax-core": "^1.1.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.5",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
